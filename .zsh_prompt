# Highlight the user name when logged in as root.
if [[ "${USER}" == "root" ]]; then
  userStyle='%F{red}'
else
  userStyle='%F{magenta}'
fi

# Highlight the hostname when connected via SSH.
if [[ "${SSH_TTY}" ]]; then
  hostStyle='%F{red}'
else
  hostStyle='%F{yellow}'
fi

# Set the terminal title and prompt.
PS1='%B
'
PS1+="${userStyle}%n%f" # username
PS1+='%F{white} at %f'
PS1+="${hostStyle}%m%f" # host
PS1+='%F{white} in %f'
PS1+='%F{green}%~%f'
PS1+='
%F{white}%% %f%b'
export PS1

